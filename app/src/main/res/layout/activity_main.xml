<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <WebView
        android:id="@+id/procwebview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <LinearLayout
        android:id="@+id/globalwrapper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:id="@+id/discordwrapper"
            android:layout_width="100dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="end|bottom"
            android:orientation="vertical"
            android:visibility="visible">

            <LinearLayout
                android:id="@+id/discordwrapperinside"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="start|bottom"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/discord"
                    style="@android:style/Widget.DeviceDefault.ImageButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:contentDescription="@string/discord_img_button"
                    android:scaleType="fitEnd"
                    app:srcCompat="@drawable/discordicon" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/mailwrapperinside"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginBottom="20dp"
                android:gravity="start|bottom"
                android:orientation="vertical"
                android:visibility="visible">

                <ImageButton
                    android:id="@+id/mail"
                    style="@android:style/Widget.DeviceDefault.ImageButton"
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:background="@null"
                    android:contentDescription="@string/email_image_button"
                    android:scaleType="fitCenter"
                    android:visibility="visible"
                    app:srcCompat="@drawable/mailv2" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>